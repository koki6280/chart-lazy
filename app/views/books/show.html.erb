<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>
<% if flash.now[:alert] %>
<p><%= flash.now[:alert] %></p>
<% end %>

<div class="container">
   <div class="row">
        <div class="col-xs-3">
        <%= render 'users/list', user: @user %>
        <%= render 'books/box', book: @book %>
        </div>

    <div class="col-xs-9">
       <h1>Book detail</h1>
                    <table class="table table-striped">
                    	<thead>
                    		<tr>
                    			<th>Image</th>
                                <th>Title</th>
                    			<th>Body</th>
                    			<th></th>
                    		</tr>
                    	</thead>
                    	<body>
                            <tr>
                            <td>
                                <%= link_to user_path(@book.user.id) do %>
                                     <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "l_e_others_471.png", size: '50x50' %>
                                     <%= @user.name %>
                                <% end %>
                            </td>
                        	<td><%= link_to @book.title, book_path(@book.id) %></td>
                        	<td><%= @book.body %></td>
                        	<td><% if @book.user == current_user %>
                                <button type="button" class="btn btn-success btn-sm"><%= link_to 'Edit', edit_book_path(@book.id) %></button>
                        		<button type="button" class="btn btn-danger btn-sm"><%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
                                </button>
                        		<% end %>
                        	</td>
                            </tr>
                        </body>
                    </table>
     </div>
  </div>
</div>